<%- include('layouts/head'); -%>
    <body>
        <%- include('layouts/navbar'); -%>
         <!-- Page Header-->
         <header class="masthead" style="background-image: url('assets/img/home-bg-1.webp')">
            <div class="container position-relative px-4 px-lg-5">
                <div class="row gx-4 gx-lg-5 justify-content-center">
                    <div class="col-md-10 col-lg-8 col-xl-7">
                        <div class="site-heading">
                            <h1>Maison Noire</h1>
                            <span class="subheading">Histoire et culture Africaine</span>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <!-- Main Content-->
        <div class="container px-4 px-lg-5">
            <div class="row gx-4 gx-lg-5 justify-content-center">
                <div class="col-md-10 col-lg-8 col-xl-7">
                    <!-- Post preview-->
                    <% for (var i = 0; i < blogposts.length; i++) { %>
                    <div class="post-preview">
                        
                        <a href="/post/<%= blogposts[i]._id%>">
                            <h2 class="post-title">
                                <%= blogposts[i].title %>
                            </h2>
                            <h4 class="post-subtitle">
                                <%= blogposts[i].summary %>
                            </h4>
                        </a>
                        <p class="post-meta">
                            Posted by <%= blogposts[i].userid.username %>
                            <a href="#!"><%= blogposts[i].username %></a>
                            on <%= blogposts[i].datePosted.toDateString() %>
                        </p>
                    </div>
                    <!-- Divider-->
                    <hr class="my-4" />
                    <% } %>
                    <!-- Pager-->
                    <!-- <div class="d-flex justify-content-end mb-4"><a class="btn btn-primary text-uppercase" href="#!">Older Posts â†’</a></div> -->
                </div>
            </div>
        </div>
        <!-- Footer-->
        <!-- include permet d'aller chercher les suites dans un d'autres dossiers ejs-->
        <%- include('layouts/footer'); -%>
        <!-- script-->
        <%- include('layouts/scripts'); -%>
    </body>
</html>
