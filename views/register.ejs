<%- include('layouts/head'); -%>
<body>

    <section class="vh-100" style="background-color: #eee;">
     
        <div class="container h-100">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-lg-12 col-xl-11">
              <div class="card text-black" style="border-radius: 25px;">
                
                <div class="card-body p-md-5">
                  <div class="row justify-content-center">
                    <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
      
                      <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Sign up</p>
                    
                      <form class="mx-1 mx-md-4" action="/users/register" method="POST" enctype="multipart/form-data" >
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" >Your Name</label>
                            <input type="text" id="username" name="username" value="<%=username %>" class="form-control" />
                            
                          </div>
                          
                        </div>
      
                
      
                        <div class="d-flex flex-row align-items-center mb-4">
                          <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                          <div class="form-outline flex-fill mb-0">
                            <label class="form-label" for="form3Example4c">Password</label>
                            <input type="password" id="password" name="password" value="<%=password %>" class="form-control" />
                           
                          </div>
                        </div>
      
                        
      
                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                          <button type="submit" class="btn btn-primary btn-lg">Register</button>  
                          &nbsp; &nbsp;
                          <button type="button" class="btn btn-primary btn-lg"><a style="color: white;" href="/">Back</a></button>
                        </div>
                      
      
                      </form>
      
                    </div>
                    <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
      
                      <img src="https://s3.us-east-2.amazonaws.com/itt-images/_800x418_crop_center-center_82_none/4507w_F1_GettyImages-664782212.jpg?mtime=1623190504"
                        class="img-fluid" alt="Sample image">
      
                    </div>
                  </div>
                  <div class="container">
                    <div class="row">
                    <div class="col-lg-8 col-md-10 mx-auto text-center" style="font-size: 12px;">
                    <% if(errors != null && errors.length > 0){ %>
                    <ul class="list-group"></ul>
                    <% for (var i = 0; i < errors.length; i++) { %>
                    <li class="list-group-item list-group-item-danger"><%=
                    errors[i] %></li>
                    <% } %>
                    </ul>
                    <% } %>
                  </div>
                  </div>
                </div> 
                  
                </div>
                
              </div>
            </div>
          </div>
        </div>
        
      </section>

</body>

  <%- include('layouts/scripts'); -%>